
/* 透视图布局 */

.header-view{
    width: 100%;
    height: 450rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  
  .header-background-view{
  width: 100%;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  }
  

.image {
    position: absolute;
    left: 0;
    top: 0;
    height: 360rpx;
    display: block;
    width: 100%;
    z-index: -999;
}  



  .header-title-view{
    width: 100%;
    height: 120rpx;
    z-index: 99;
  }
  
  .header-user-view{
  margin-top: 20rpx;
  margin-left: 30rpx;
  width: 300rpx;
  height: 100rpx;
  display: flex;
  border-radius: 40rpx;
  align-items: center;
  }
  .header-user-icon{
    margin-top: 0;
    margin-left: 0;
    width: 90rpx;
    height: 90rpx;
    border-radius: 45rpx;
  }
  
  .header-user-text{
    font-size: 36rpx;
    margin-left: 20rpx;
    /* color: #333333; */
  }
  
  .header-image{
    margin-top: 30rpx;
    width: 90%;
    height: 300rpx;
    border-radius: 20rpx;
    align-self: center;
    display: flex;
    flex-direction: column;
    background-color: white;
  }

  
